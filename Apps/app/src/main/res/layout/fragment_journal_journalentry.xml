<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PopupFragments.Journal.JournalEntryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonDoneJournalEntry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Journal Entry"
            android:textSize="14sp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:id="@+id/labelJournalEntryTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:labelFor="@id/editJournalEntryTitle"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/editJournalEntryTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="text"
            android:importantForAutofill="no"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/labelJournalEntryText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Entry"
            android:labelFor="@id/editJournalEntryText"/>
        <EditText
            android:id="@+id/editJournalEntryText"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:importantForAutofill="no"
            android:translationY="15dp"/>

    </LinearLayout>
</ScrollView>