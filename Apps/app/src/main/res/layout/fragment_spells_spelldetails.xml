<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PopupFragments.Spells.SpellDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spellTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:labelFor="@id/editJournalEntryTitle"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/spellsubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="subTitle"
            android:labelFor="@id/editJournalEntryTitle"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/spellDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:labelFor="@id/editJournalEntryTitle"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/spellProperties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:labelFor="@id/editJournalEntryText"/>


    </LinearLayout>
</ScrollView>