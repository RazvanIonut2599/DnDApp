<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainFragments.InventoryFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/labelSpellName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spell Name"
                android:labelFor="@id/editSpellName"
                />
            <EditText
                android:id="@+id/editSpellName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:importantForAutofill="no"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/labelSpellLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spell Level"
                android:labelFor="@id/editSpellLevel"
                />
            <EditText
                android:id="@+id/editSpellLevel"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number"
                android:importantForAutofill="no"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/labelSpellDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spell Description"
                android:labelFor="@id/editSpellDescription"/>
            <EditText
                android:id="@+id/editSpellDescription"
                android:layout_width="340dp"
                android:layout_height="400dp"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:importantForAutofill="no"
                android:translationY="30dp"/>
        </FrameLayout>
        <Button
            android:id="@+id/buttonDoneAddSpell"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Add Spell"
            android:textSize="14sp"
            android:translationX="40dp" />
    </LinearLayout>

</FrameLayout>