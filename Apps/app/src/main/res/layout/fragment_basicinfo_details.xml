<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PopupFragments.BasicInfo.SkillFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/labelDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelName"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:labelFor="@id/editTextName"
                    />
                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="text"
                    android:importantForAutofill="no"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelClass"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:labelFor="@id/editTextClass"/>
                <EditText
                    android:id="@+id/editTextClass"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="text"
                    android:importantForAutofill="no"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelRace"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Race"
                    android:labelFor="@id/editTextRace"
                    />
                <EditText
                    android:id="@+id/editTextRace"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="text"
                    android:importantForAutofill="no"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelLevel"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:labelFor="@id/editTextLevel"
                    />
                <EditText
                    android:id="@+id/editTextLevel"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="text"
                    android:importantForAutofill="no"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelPB"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Proficiency bonus"
                    android:labelFor="@id/editTextPB"
                    />
                <EditText
                    android:id="@+id/editTextPB"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="text"
                    android:importantForAutofill="no"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/labelFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features"
                android:labelFor="@id/editFeatures"/>
            <EditText
                android:id="@+id/editFeatures"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:importantForAutofill="no"
                android:translationY="30dp"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>